<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="match_parent"
                                                 xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                  android:orientation="vertical">
        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorPrimary">
            <ImageView android:layout_width="100dp"
                       android:id="@+id/ivlogo"
                       android:layout_height="50dp"
                       android:layout_alignParentTop="true"
                       android:layout_centerInParent="true"
                       android:layout_marginTop="10dp"
                       android:layout_marginBottom="10dp"
                       android:src="@drawable/sasmir_logo"/>
            <ImageView android:layout_width="37dp"
                       android:layout_height="37dp"
                       android:id="@+id/ivlIST"
                       android:layout_marginTop="14dp"
                       android:layout_marginBottom="10dp"
                       android:padding="6dp"
                       android:clickable="true"
                       android:focusable="true"
                       android:foreground="?android:attr/selectableItemBackground"
                       android:layout_alignParentRight="true"
                       android:layout_marginRight="20dp"
                       android:src="@drawable/ic_clipboards"/>
        
        
        </RelativeLayout>
        <android.support.v4.widget.NestedScrollView android:layout_width="match_parent"
                                                    android:layout_height="match_parent">
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:orientation="vertical"
                          android:layout_margin="16dp"
            
            >
                
                <EditText android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:hint="Task Title"
                          android:padding="10dp"
                          android:singleLine="true"
                          android:maxLines="1"
                          android:inputType="textCapWords"
                          android:background="@drawable/rounded_corner_bg"
                          android:textSize="16sp"
                />
                
                <EditText android:layout_width="match_parent"
                          android:layout_height="100dp"
                          android:hint="Task Description"
                          android:layout_gravity="start"
                          android:gravity="start"
                          android:layout_marginTop="16dp"
                          android:padding="10dp"
                          android:background="@drawable/rounded_corner_bg"
                          android:textSize="16sp"
                />
                
                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:textSize="16sp"
                          android:layout_marginTop="16dp"
                          android:layout_gravity="start"
                          android:gravity="start"
                          android:drawablePadding="10dp"
                          android:drawableLeft="@drawable/ic_fiber_manual_record_black_24dp"
                          android:text="Are light fixtures in good condition?"/>
                
                <RadioGroup android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                    <RadioButton android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:text="YES"
                                 android:textSize="16sp"
                                 android:padding="10dp"/>
                    <RadioButton android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:text="NO"
                                 android:textSize="16sp"
                                 android:padding="10dp"/>
                </RadioGroup>
                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:textSize="16sp"
                          android:layout_marginTop="16dp"
                          android:layout_gravity="start"
                          android:gravity="start"
                          android:drawablePadding="10dp"
                          android:drawableLeft="@drawable/ic_fiber_manual_record_black_24dp"
                          android:text="Are all extinguishers fully charged and operable?"/>
                
                <RadioGroup android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                    <RadioButton android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:text="YES"
                                 android:textSize="16sp"
                                 android:padding="10dp"/>
                    <RadioButton android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:text="NO"
                                 android:textSize="16sp"
                                 android:padding="10dp"/>
                </RadioGroup>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_marginTop="16dp"
                        android:layout_gravity="start"
                        android:gravity="start"
                        android:drawablePadding="10dp"
                        android:drawableLeft="@drawable/ic_fiber_manual_record_black_24dp"
                        android:text="Do all workers know the plan?"/>
                
                <RadioGroup android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:orientation="horizontal">
                    <RadioButton android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:text="YES"
                                 android:textSize="16sp"
                                 android:padding="10dp"/>
                    <RadioButton android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:text="NO"
                                 android:textSize="16sp"
                                 android:padding="10dp"/>
                </RadioGroup>
                
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal">
                    <TextView android:layout_width="wrap_content"
                              android:layout_gravity="start|center"
                              android:gravity="start|center"
                              android:paddingRight="10dp"
                              android:layout_weight="1"
                              android:textSize="16sp"
                              android:textColor="@color/txt_grey"
                              android:layout_height="wrap_content"
                              android:text="Upload Picture"/>
                    <ImageView android:layout_width="100dp"
                               android:id="@+id/imageView"
                               android:layout_height="100dp"
                               android:clickable="true"
                               android:focusable="true"
                               android:foreground="?android:attr/selectableItemBackground"
                               android:src="@drawable/camera"
                               android:scaleType="centerCrop"/>
                </LinearLayout>
                <android.support.v7.widget.CardView
                        android:id="@+id/submit"
                        android:layout_width="match_parent"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        
                        android:layout_height="wrap_content"
                        app:cardElevation="5dp"
                        app:cardCornerRadius="24dp"
                        app:cardBackgroundColor="@color/colorPrimary">
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:textColor="@color/white"
                              android:textSize="17sp"
                              android:layout_gravity="center"
                              android:gravity="center"
                              android:padding="13dp"
                              android:clickable="true"
                              android:focusable="true"
                              android:foreground="?android:attr/selectableItemBackground"
                              android:text="SUBMIT"/>
                </android.support.v7.widget.CardView>
            
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>